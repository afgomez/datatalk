<% form_for @analysis do |f| %>
 <%= render "shared/form_errors", :object => @analysis %>
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :excerpt -%>
    <%= f.text_field :excerpt -%>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:body].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:body].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

<div class='visualization'>
  <%= fields_for :visualization do |f| -%>

    <div class='field'>
      <%= f.label :legend -%>
      <%= f.text_field :legend, :class => 'larger widest' -%>
    </div>
    
    <div class='field'>
      <%= f.label :body -%>
      <%= f.text_field :body -%>
    </div>
    
    <div class='field'>
      <%= f.label :dataset_id -%>
      <%= f.select :dataset_id, options_for_select(Dataset.all.map{|d| [d.name,d.id]}) -%>
    </div>
    
    <div class='field'>
      <%= f.label :transpose -%>
      <%= f.check_box :transpose -%>
    </div>
    
    <div class='field'>
      <%= f.label :width -%>
      <%= f.text_field :width -%>
    </div>
    
    <div class='field'>
      <%= f.label :height -%>
      <%= f.text_field :height -%>
    </div>
   
  <% end -%>

</div>

  <%= f.hidden_field :analysis_id -%>

  <%= f.submit "Responder" -%>

<% end %>
