<ul>
  <% if Admin::VisualizationsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_visualizations_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_visualization_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::VisualizationsController.sortable? and Visualization.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Visualizations"),
                 admin_visualizations_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Visualizations"),
                 admin_visualizations_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>