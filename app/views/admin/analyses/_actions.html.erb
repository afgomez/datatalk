<ul>
  <% if Admin::AnalysesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_analyses_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_analysis_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::AnalysesController.sortable? and Analysis.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Analyses"),
                 admin_analyses_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Analyses"),
                 admin_analyses_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>