<div class="dataset">

  <div class="meta">
    <h1><%= link_to_unless_current dataset.name, dataset_path(dataset) %></h1>
    <p><%= dataset.description %></p>
    <p class="source">Fuente: <%= link_to dataset.origin, dataset.origin %></p>
  </div>
  
  <div class="actions">
    <%= link_to "#{image_tag 'download.png'} Descargar".html_safe, dataset.data_file_url, :class => 'btn' %>
  </div>

</div>